{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    // "rootDir": "src",
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    
  },
  "include": ["src/**/*.ts", "server.ts"]
}
